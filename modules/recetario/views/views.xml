<odoo>
  <data>

    <!-- CAMPOS DE LISTAS -->

    <!-- RECETAS -->

    <record model="ir.ui.view" id="recetario.recetas_list">
      <field name="name">recetas list</field>
      <field name="model">recetario.recetas</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"/>
          <field name="tipo"/>
        </tree>
      </field>
    </record>

    <!-- USUARIOS -->

    <record model="ir.ui.view" id="recetario.usuarios_list">
      <field name="name">usuarios list</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_tree"/>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!-- CAMPOS DE FORMULARIOS -->

    <!-- RECETAS -->

    <record model="ir.ui.view" id="recetario.recetas_form">
      <field name="name">recetas form</field>
      <field name="model">recetario.recetas</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="nombre"/>
            </group>
            <group>
              <field name="descripcion"/>
              <field name="tipo"/>
              <field name="dificultad"/>
              <field name="duracion"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- USUARIOS -->

    <record model="ir.ui.view" id="recetario.usuarios_form">
      <field name="name">usuario form</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <notebook position="inside">
          <pages string="Recetas">
            <field name="id_recetario">
              <field name="id"/>
              <field name="nombre"/>
              <field name="descripcion"/>
              <field name="tipo"/>
              <field name="dificultad"/>
              <field name="duracion"/>
            </field>
          </pages>
        </notebook>
      </field>
    </record>

    <!-- CAMPOS DE SEARCH -->

    <!-- USUARIOS -->

    <!-- SEARCH JUGADOR -->

        <record model="ir.ui.view" id="medievol.player_search">
            <field name="name">player search</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <search>
                    <field name="nombre"/>
                    <field name="aplicacion"/>
                    <filter name="its_app" string="Aplicacion" domain="[('aplicacion','=', True)]"/>
                </search>
            </field>
        </record>

    <!-- CAMPOS DE ACTION -->

    <!-- RECETAS -->

    <record model="ir.actions.act_window" id="recetario.recetas_action_window">
      <field name="name">recetas window</field>
      <field name="res_model">recetario.recetas</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- USUARIOS -->

    <!-- ACTION JUGADORES -->

    <record model="ir.actions.act_window" id="recetario.usuarios_action_window">
      <field name="name">usuario window</field>
      <field name="res_model">res.partner</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{'search_default_its_app':1}</field>
    </record>

    <menuitem name="Recetario" id="recetario.menu_root"/>

    <menuitem name="Recetas" id="recetario.recetas" parent="recetario.menu_root" action="recetario.recetas_action_window"/>
    <menuitem name="Usuario" id="recetario.usuarios" parent="recetario.menu_root" action="recetario.usuarios_action_window"/>
  </data>
</odoo>